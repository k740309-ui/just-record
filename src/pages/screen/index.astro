---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer.astro';

const allScreen = await getCollection('screen');
const sortedScreen = allScreen.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<Layout title="SCREEN | JUST RECORD">
  <main class="container">
    <header class="logs-header">
      <h1>SCREEN</h1>
      <p class="logs-intro">
        스크린의 울림. 영화, 드라마, 그리고 게임 속 인상적인 순간들을 다룹니다.
      </p>
    </header>

    <section class="logs-list-section">
      <div class="logs-list">
        {sortedScreen.map(entry => (
          <article class="log-item">
            <a href={`/screen/${entry.slug}`} class="log-link">
              <div class="log-meta">
                <time datetime={entry.data.date.toISOString()}>
                  {entry.data.date.toLocaleDateString('ko-KR', { year: 'numeric', month: '2-digit', day: '2-digit' }).replace(/\.$/, '')}
                </time>
              </div>
              <div class="log-content">
                <h2 class="log-title">{entry.data.title}</h2>
                <div class="log-fields">
                  {entry.data.genre && <span class="field"><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 14.899A7 7 0 1 1 15.71 8h1.79a4.5 4.5 0 0 1 2.5 8.242"/><path d="M12 12v9"/><path d="m8 17 4 4 4-4"/></svg> {entry.data.genre}</span>}
                  {entry.data.rating && <span class="field rating">★ {entry.data.rating}</span>}
                </div>
                <p class="log-desc">{entry.data.description}</p>
              </div>
              <div class="read-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
              </div>
            </a>
          </article>
        ))}
        {sortedScreen.length === 0 && <p class="empty">아직 작성된 기록이 없습니다.</p>}
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  main {
    padding-top: var(--spacing-xxl);
  }

  .logs-header {
    margin-top: var(--spacing-xl);
    padding-bottom: var(--spacing-xl);
    border-bottom: 2px solid var(--color-border);
    animation: fadeIn 0.8s ease forwards;
  }

  h1 {
    font-size: 3rem;
    font-weight: 300;
    line-height: 1.2;
    letter-spacing: -0.02em;
    color: var(--color-text);
    margin-bottom: var(--spacing-sm);
  }

  .logs-intro {
    font-size: 1.15rem;
    color: var(--color-text-muted);
    font-weight: 300;
  }

  .logs-list-section {
    padding: var(--spacing-xl) 0 var(--spacing-xxl) 0;
  }

  .logs-list {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .log-item {
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(5, 150, 105, 0.1);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.02);
    border-radius: 12px;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    position: relative;
    overflow: hidden;
  }

  .log-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 3px;
    background-color: var(--color-accent);
    transform: scaleY(0);
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    transform-origin: bottom;
  }

  .log-item:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 30px rgba(5, 150, 105, 0.08);
    border-color: rgba(5, 150, 105, 0.3);
    background: rgba(255, 255, 255, 0.85);
  }

  .log-item:hover::before {
    transform: scaleY(1);
    transform-origin: top;
  }

  .log-link {
    display: flex;
    padding: var(--spacing-xl);
    border-bottom: none;
    align-items: center;
    gap: var(--spacing-lg);
  }

  .log-meta {
    flex-shrink: 0;
    width: 120px;
    font-size: 0.95rem;
    color: var(--color-accent);
    font-weight: 500;
  }

  .log-content {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }

  .log-title {
    font-size: 1.35rem;
    font-weight: 500;
    color: var(--color-text);
    margin: 0;
    line-height: 1.4;
    transition: color 0.2s ease;
  }

  .log-fields {
    display: flex;
    gap: 12px;
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin: 4px 0;
  }

  .field {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .rating {
    color: var(--color-accent-hover);
    font-weight: 500;
  }

  .log-desc {
    font-size: 1.05rem;
    color: var(--color-text-muted);
    margin: 0;
    line-height: 1.6;
  }

  .read-icon {
    color: var(--color-border);
    transition: all 0.3s ease;
    transform: translateX(-10px);
    opacity: 0;
  }

  .log-item:hover .read-icon {
    color: var(--color-accent);
    transform: translateX(0);
    opacity: 1;
  }

  .empty {
    color: var(--color-text-muted);
    padding: var(--spacing-lg) 0;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @media (max-width: 768px) {
    .log-link {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--spacing-md);
      padding: var(--spacing-lg);
    }
    .log-meta {
      width: auto;
    }
    .read-icon {
      display: none;
    }
    .log-item:hover {
      transform: translateY(-4px);
    }
    .log-item::before {
      top: 0;
      left: 0;
      height: 4px;
      width: 100%;
      transform: scaleX(0);
      transform-origin: left;
    }
    .log-item:hover::before {
      transform: scaleX(1);
    }
  }
</style>
