---
const currentPath = Astro.url.pathname;
---

<nav class="navbar">
  <div class="nav-container">
    <a href="/" class="logo">JUST RECORD</a>
    <div class="nav-links">
      <a href="/" class={`nav-item ${currentPath === '/' ? 'active' : ''}`}>
        <span class="main-text">Home</span>
      </a>
      <a href="/taste" class={`nav-item ${currentPath.startsWith('/taste') ? 'active' : ''}`}>
        <span class="main-text">TASTE & STAY</span>
        <span class="sub-text">맛과 머묾</span>
      </a>
      <a href="/screen" class={`nav-item ${currentPath.startsWith('/screen') ? 'active' : ''}`}>
        <span class="main-text">SCREEN</span>
        <span class="sub-text">스크린</span>
      </a>
      <a href="/thoughts" class={`nav-item ${currentPath.startsWith('/thoughts') ? 'active' : ''}`}>
        <span class="main-text">THOUGHTS</span>
        <span class="sub-text">단상</span>
      </a>
      <a href="/about" class={`nav-item ${currentPath === '/about' ? 'active' : ''}`}>
        <span class="main-text">ABOUT</span>
        <span class="sub-text">소개</span>
      </a>
    </div>
  </div>
</nav>

<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 70px;
    background-color: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border-bottom: 1px solid rgba(229, 231, 235, 0.5);
    z-index: 100;
  }

  .nav-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
    height: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-weight: 600;
    font-size: 1.125rem;
    letter-spacing: 0.05em;
    color: var(--color-text);
  }

  .nav-links {
    display: flex;
    gap: var(--spacing-lg);
    align-items: center;
  }

  .nav-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: var(--color-text-muted);
    position: relative;
    padding-bottom: 6px;
    text-decoration: none;
    border: none;
  }

  .main-text {
    font-size: 0.9rem;
    font-weight: 500;
    letter-spacing: 0.02em;
  }

  .sub-text {
    font-size: 0.65rem;
    font-weight: 300;
    color: #888;
    margin-top: 2px;
  }

  .nav-item:hover, .nav-item.active {
    color: var(--color-accent);
  }
  
  .nav-item:hover .sub-text, .nav-item.active .sub-text {
    color: var(--color-accent-hover);
  }

  .nav-item::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 0%;
    height: 2px;
    background-color: var(--color-accent);
    transition: width 0.3s ease;
  }

  .nav-item:hover::after, .nav-item.active::after {
    width: 100%;
  }

  @media (max-width: 640px) {
    .nav-links {
      gap: var(--spacing-md);
    }
  }
</style>
